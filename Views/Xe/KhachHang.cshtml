@using QuanLyGaraOto.Models.EF;
@{
    ViewBag.Title = "Quản lý khách hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int dem = 1;
}
@model List<Xe>


<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Quản lý khách hàng
        </h1>
        <ol class="breadcrumb">
            <li><a href="/"><i class="fa fa-dashboard"></i>Trang chủ</a></li>
            <li class="active">Quản lý khách hàng</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">

        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title"></h3>
                    </div><!-- /.box-header -->
                    <div class="box-body">
                        <table id="tblData" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th class="text-center">#</th>
                                    <th class="text-center">Họ và tên</th>
                                    <th class="text-center">Thông tin xe</th>
                                    <th class="text-center">Thông tin khách hàng</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {

                                    <tr>
                                        <td class="text-center">@dem</td>
                                        <td class="text-center">
                                            <b>@item.TenChuXe</b>
                                        </td>
                                        <td>
                                            <p>Nhãn hiệu: <b>@item.HieuXe.HieuXe1</b></p>
                                            <p>Biển số: <b>@item.BienSo</b></p>
                                        </td>
                                        <td>
                                            <p>Địa chỉ: <b>@item.DiaChi</b></p>
                                            <p>SĐT: <b>@item.SDT</b>, Email: <b>@item.Email</b></p>
                                        </td>
                                    </tr>
                                    dem++;
                                }

                            </tbody>

                        </table>
                    </div><!-- /.box-body -->
                </div><!-- /.box -->

            </div><!-- /.col -->


        </div><!-- /.row -->
    </section><!-- /.content -->
</div>

@section jsSection{

    <script>
        $(function () {
            $("#tblData").DataTable();
            //nếu không có thao tác gì thì ẩn đi
            $('#AlertBox').removeClass('hide');

            //Sau khi hiển thị lên thì delay 1s và cuộn lên trên sử dụng slideup
            $('#AlertBox').delay(2000).slideUp(500);

        });

    </script>

}
